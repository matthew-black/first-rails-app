<h2>New post.</h3>

<p><%= "#{session[:puppy]}" %></p>

<%= form_for :post, url: posts_path do |f| %>

  <p>
    <%= f.label :title %>:
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :content %>:<br>
    <%= f.text_area :content, :cols => 40, :rows => 20 %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>


